<view >
  <view class="logo">
<image src="../../images/user.jpg"></image>
  </view>
              <view class="login-form">
    <view class="login-form-row">
      <image src="../../images/username.png"></image>
      <input type="text" bindinput="usernameInput" placeholder="请输入手机号码" auto-focus class="login-txt"/>
    </view>
    <view class="login-form-row">
      <image src="../../images/password.png"></image>
      <input type="password" bindinput="passwordInput" placeholder="请输入密码" class="login-txt"/>
    </view>
      <button class="login-btn" disabled="{{loginBtnState}}" bindtap="login">登录</button>
    </view>
    <view class="forget-reg">
      
      <navigator 
      class="register"
      url="../register/register">
        <text>注册</text>
      </navigator> 
      
    </view>
</view>