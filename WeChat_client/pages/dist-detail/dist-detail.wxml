<view class="outside">
  <view class="header">
    <image src="../../images/time.png"></image>
    <text>{{time}}</text>
  </view>
  <scroll-view scroll-x="true" class="tab-h" scroll-left="{{scrollLeft}}">
    <view class="tab-item {{currentTab==0?'active':''}}" data-current="0" bindtap="swichNav">实时功率</view>
    <view class="tab-item {{currentTab==1?'active':''}}" data-current="1" bindtap="swichNav">预测功率</view>


  </scroll-view>
  <swiper class="tab-content" current="{{currentTab}}" duration="300" bindchange="switchTab" style="height:{{winHeight}}rpx">
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h">
        <view class="content">
          <ec-canvas id="mychart-one" canvas-id="mychart-multi-one" ec="{{ ecOne }}" force-use-old-canvas="true"></ec-canvas>
        </view>
        <view class="index-show">
          <view class="index-show-data">
            <text class="text-left"> 您正在使用的电器: <text style="font-weight: bolder;">{{label}}</text></text>
          </view>
        </view>

        <view class="index-show" style="margin-top: 27px;">
          <view class="index-show-data">
            <text class="text-left"> 最近50分钟消耗电能: <text style="font-weight: bolder;">{{energy}}</text> 千焦</text>
          </view>
        </view>

      </scroll-view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y="true" class="scoll-h">
        <view class="content">
          <ec-canvas id="mychart-two" canvas-id="mychart-multi-two" ec="{{ ecTwo }}" force-use-old-canvas="true"></ec-canvas>
        </view>
        
      </scroll-view>
      
    </swiper-item>

  </swiper>
</view>