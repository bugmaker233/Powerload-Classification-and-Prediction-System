<view class="tab-content" duration="300" bindchange="switchTab"
style="height:100rpx">

<view class="login-form-row">
      <image src="../../images/username.png"></image>
      <input type="text" bindinput="usernameInput" placeholder="请输入手机号码" auto-focus class="login-txt"/>
    </view>
    <view class="login-form-row">
      <image src="../../images/password.png"></image>
      <input type="password" bindinput="passwordInput" placeholder="请输入密码" class="login-txt"/>
    </view>
    <view class="login-form-row">
      <image src="../../images/password.png"></image>
      <input type="password" bindinput="passwordInput2" placeholder="请再次输入密码" class="login-txt"/>
    </view>
    <view class="login-form-row">
      <image src="../../images/room.png"></image>
      <picker bindchange="bindPickerChange" range="{{roomNumList}}" value="{{roomNum}}" class="login-txt">
        <view class="picker">
        选择房间：{{roomNumList[roomNum]}}
      </view>
      </picker>
    </view>
      <button bindtap="register" disabled="{{loginBtnState}}" class="login-btn">确认</button>

</view>
